<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!--
        Définition du descripteur JPA
        Le fichier déclare une unité de persistance nommée et la liste explicite des entités gérées
        L'application utilise des transactions locales (RESOURCE_LOCAL), donc la gestion des transactions est faite côté application
    -->
    <persistence-unit name="guideRestoJPA" transaction-type="RESOURCE_LOCAL">
        <description>Persistence unit for the GuideResto project.</description>

        <!--
            Déclaration explicite des classes persistées
            Cette approche garantit que le provider JPA prend en compte les entités même sans scan automatique du classpath
        -->
        <class>ch.hearc.ig.guideresto.business.BasicEvaluation</class>
        <class>ch.hearc.ig.guideresto.business.City</class>
        <class>ch.hearc.ig.guideresto.business.CompleteEvaluation</class>
        <class>ch.hearc.ig.guideresto.business.Evaluation</class>
        <class>ch.hearc.ig.guideresto.business.EvaluationCriteria</class>
        <class>ch.hearc.ig.guideresto.business.Grade</class>
        <class>ch.hearc.ig.guideresto.business.Localisation</class>
        <class>ch.hearc.ig.guideresto.business.Restaurant</class>
        <class>ch.hearc.ig.guideresto.business.RestaurantType</class>
    </persistence-unit>
</persistence>
